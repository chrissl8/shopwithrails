<div class="welcome-container">
  <h1 class="welcome-title">ShopWithRails</h1>
  <div class="form-item">
  <h3>Log in to begin!</h3>
  <%= form_tag '/login' do %>
  <p>
  <%= label_tag :username %><br>
  <%= text_field_tag :username %>
  </p>
  <p>
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
  </p>
  <%= submit_tag 'Log In', class: "btn btn-success" %> 
  <% end %>
  <br>
  <div id="error-msg">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-dismissible alert-<%= message_type %>"><%= message %>
      <button id="close-error" type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    <% end %>
  </div>
</div>
</div>