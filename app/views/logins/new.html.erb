<div class="form-item">
  <h1 class="user-heading">ShopWithRails &#9733; Log In</h1>
  <%= form_tag '/login' do %>
  <p>
  <%= label_tag :username %><br>
  <%= text_field_tag :username %>
  </p>
  <p>
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
  </p>
  <span class="btn btn-primary"><%= link_to 'Back', root_path %></span> &#9733; <%= submit_tag 'Log In', class: "btn btn-success" %>
  <% end %>
  <div class="error">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %>
        </div>
    <% end %>
  </div>
</div>